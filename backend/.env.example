# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
API_URL=http://localhost:3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=trafficanalyzer
DB_PASSWORD=changeme_secure_password
DB_NAME=trafficanalyzer
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# OpenAI/Claude API Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@trafficanalyzer.com

# Admin Configuration
ADMIN_EMAIL=admin@trafficanalyzer.com
ADMIN_PASSWORD=changeme_admin_password

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/trafficanalyzer/app.log

# Price Scraping Configuration
SCRAPER_TIMEOUT=30000
SCRAPER_CONCURRENCY=5
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this
SESSION_TIMEOUT=3600000

# Feature Flags
ENABLE_PRICE_SCRAPING=true
ENABLE_LLM_RECOMMENDATIONS=true
ENABLE_USER_TRACKING=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Data Retention
DATA_RETENTION_DAYS=90
ANALYTICS_RETENTION_DAYS=365
